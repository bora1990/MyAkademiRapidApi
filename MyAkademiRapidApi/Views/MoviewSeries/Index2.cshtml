
@model List<MoviesViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <h2>Imdb Top 100 Film</h2>

    <table class="table table-hover">

        <tr>
            <th>#</th>
            <th>Film Adı</th>
            <th>Film Konusu</th>
            <th>Fotograf</th>
            <th>Film Tür</th>
         
            <th>Film Rating Puanı</th>
            <th>Film Piyasa Çıkış Tarihi</th>
           
            <th>Imdb Link</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td>@item.title</td>
                <td>@item.description</td>
                <td><img src="@item.image" width="80px" /></td>
                

                @if ((@item.genre.Length) ==0)
                {
                    <td></td>
                } else if((@item.genre.Length)==1){
                    <td>@item.genre.FirstOrDefault()  </td>
                }
                else
                {
                    <td>@item.genre.FirstOrDefault() - @item.genre[1] </td>
                }
              

                <td>@item.rating</td>
                <td>@item.year</td>
              
                <td><a href="@item.imdb_link" class="btn btn-dark">Imdb Linki</a></td>
            </tr>

        }

    </table>
</div>
