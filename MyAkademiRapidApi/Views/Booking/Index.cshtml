@model List<BookingApiViewModel.Result>
@{
    Layout = null;
    var i = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <h2>Oteller</h2>
    
    <table class="table table-hover">

        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Şehir Adı</th>
            <th>Adres</th>
            <th>Mesafe</th>
            <th>Bölge (Yukarıda Belirtilen ID Olarak)</th>
            <th>Konuşulan Dil</th>
            <th>Resim</th>
            <th>Fiyat</th>
            <th>Değerlendirme Puanı</th>



        </tr>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.hotel_name</td>
                <td>@item.city</td>
                <td>@item.address</td>
                <td>@item.distance</td>
                <td>@item.district</td>
                <td>@item.default_language</td>
                <td><img src="@item.main_photo_url" width="80px" /> </td>
                <td>@item.min_total_price</td>
                <td>@item.address</td>


            </tr>
        }
    </table>




</div>
